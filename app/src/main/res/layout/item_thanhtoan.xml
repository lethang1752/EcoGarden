<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/fourth"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_thanhtoan_image"
            android:scaleType="centerCrop"
            android:src="@drawable/iconnew_w512"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/myriadwebpro"
                android:layout_marginTop="10dp"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/item_thanhtoan_tensp"
                android:text="Tên sản phẩm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:paddingTop="@dimen/padding_2"
                android:paddingBottom="@dimen/padding_1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/myriadwebpro"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/item_thanhtoan_txtsoluong"
                    android:text="Số lượng: "
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_thanhtoan_soluong"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:layout_marginLeft="@dimen/margin_1_2"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:background="@drawable/background_cost"
                        android:fontFamily="@font/myriadwebpro"
                        android:id="@+id/item_thanhtoan_giasp2"
                        android:text="15000"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"

                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>