<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/fourth"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_giohang_image"
            android:scaleType="centerCrop"
            android:src="@drawable/iconnew_w512"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/myriadwebpro"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/item_giohang_tensp"
                android:text="Tên sản phẩm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:weightSum="18"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/background_cost"
                    android:fontFamily="@font/myriadwebpro"
                    android:id="@+id/item_giohang_gia"
                    android:text="15000"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:layout_marginLeft="@dimen/margin_1_2"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/myriadwebpro"
                    android:id="@+id/item_giohang_giasp2"
                    android:text="25000 đ"
                    android:textSize="20sp"
                    android:layout_gravity="end"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="@dimen/padding_2"
                android:paddingBottom="@dimen/padding_1"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/item_giohang_check"
                    android:layout_width="30dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="10dp"
                    android:padding="1dp" />
                <ImageView
                    android:src="@drawable/ic_remove_24"
                    android:id="@+id/item_giohang_tru"
                    android:background="@drawable/custom_button"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/item_giohang_soluong"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/custom_quantity_cart"
                    android:paddingTop="@dimen/padding_1"
                    android:paddingBottom="@dimen/padding_1"
                    android:text="0"
                    android:textColor="@color/black"
                    android:layout_width="@dimen/background_quantity_cart_width"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/ic_add_24"
                    android:id="@+id/item_giohang_cong"
                    android:background="@drawable/custom_button"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>